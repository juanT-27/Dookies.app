extends layout

block content
  main.container
    div.products-nav.flex-full-center.container
      h3 categorias de productos
      form.filterForm(action="")
        .filterGroup
          select(name="", id="")
            option(value="") ingredientes
            option(value="higado") Higado
            option(value="pollo") pollo
            option(value="zanahoria") zanahoria
            option(value="calabacin") calabacin

        .filterGroup
          select(name="", id="")
            option(value="") Precios
            option(value="mayor") De mayor a menor
            option(value="menor") de menor a mayor

        .filterGroup
          select(name="", id="")
            option(value="") todos
            option(value="grandes") Perros grandes
            option(value="medianos") Perros Medianos
            option(value="pequenos") Perros peque√±os

    div.row#products-container
      if products.length <= 0
        h3 No hay productos disponibles 
      else 
        each product in products 
          .oneCol-sm.product-card.flex-full-center
            img(src=product.img, alt=product.title).product-card-img.background-center

            .product-card-info
              p.product-card-title= product.title
              p.product-card-price= product.price

            .product-card-actions
              i.fa-regular.fa-eye(product-id= product.id)
              i.fa-solid.fa-cart-shopping.product-cartBtn
